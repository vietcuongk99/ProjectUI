  <div class="container marketing"><br><br>
    <div class="row">
      <div class="col-1 col-sm-2 col-md-2"></div>
      <div class="col-10 col-sm-8 col-md-8">
        <div class="card" style="background-color: #33ccff;">
          <div class="card-header" ><h4 style="text-align: center;">Sửa Bài Viết</h4></div>
         
           <form action="/suabaiviet?id=<%=tieude.id%>" method="POST">
          <div class="card-body">
           <div class="form-group">
            <label for="mon">Tiêu đề:</label>
            <input type="text"  name="title" value="<%=tieude.title%>" class="form-control" id="mon" required />  
             <label for="img">Ảnh chính :</label>
            <input type="text" name="image" value="<%=tieude.image_link%>"  class="form-control" id="img"/>  
             
            <label for="mota">Mô tả ngắn:</label>
             <textarea type="text" rows="3" name="mota" value=""   class="form-control" id="step" placeholder="Nội dung" required><%=tieude.mota%></textarea>  
           

           
              
            <label for="nguyenlieu">Số mục trong bài viết:</label>
             <input  type="number" class='form-control' value="<%=muc.length%>"  name="somuc"  style="border-radius: 5px; margin-bottom: 10px; width: 48%;" placeholder="Số nguyên liệu" onblur="checknumber(this);songuyenlieu(this.value);" value="1" min="1" max="20" required>
           
                
        <%for(var i=0;i< muc.length;i++){%>
     
                
                <input type="text" style="margin-bottom:15px;" class="form-control" name="title<%=i+1%>" placeholder="Tên mục" id="level" value="<%=muc[i].title%>" required/> 
                
              
                <input type="text" style="margin-bottom:15px;" value="<%=muc[i].image%>"  placeholder="Link ảnh minh họa(Nếu không có xin hãy để trống)" name="anh<%=i+1%>" class="form-control" id="level"/>
                <textarea type="text" style="margin-bottom:15px;" rows="3" name="muc<%=i+1%>"  class="form-control" id="step" placeholder="Nội dung mục" required><%=muc[i].content%></textarea>  
                <%}%>
              <div id="nlieu"></div>
             
            <input  type="submit" class="btn btn-outline-success btn-block" style="border-radius: 8px;margin-top: 25px;" value="Xác nhận"><br>
          </div>  
        </div>
      </form>
