<script type="text/javascript">
  function checknumber(inp){
    if(inp.value=="")
      inp.value=1;
    if(inp.value>20)
    {
      alert("Tối đa 20 thôi bạn!!");
      inp.value=20;
    }
  }
  function songuyenlieu(sonl){
    var i;
    var num=sonl;
    var code="";
    var nl1='<input style="margin-bottom:15px;" type="text" class="form-control" name="title';
    var nl2='" placeholder="Tên mục" id="level" required/> <input type="text"  placeholder="Link ảnh minh họa(Nếu không có xin hãy để trống)" name="anh';
    var nl3='" class="form-control" style="margin-bottom:15px;" id="level"/><textarea type="text" rows="3" name="muc';
    var nl4='"  class="form-control" id="step" style="margin-bottom:15px;" placeholder="Nội dung mục" required></textarea>  ';
    for(i=<%=muc.length%>;i<num;i++){
      code+= nl1+(i+1)+nl2+(i+1)+nl3+(i+1)+nl4;
    }
    document.getElementById("nlieu").innerHTML=code;
  }
 

</script>
