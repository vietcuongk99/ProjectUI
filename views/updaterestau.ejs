        </nav>
      </header>

      <div class="container marketing"><br><br>
        <div class="row">
          <div class="col-1 col-sm-2 col-md-2"></div>
          <div class="col-10 col-sm-8 col-md-8">
            <div class="card" style="background-color: #cc9966;">
              <div class="card-header" ><h4 style="text-align: center;">Sửa Nhà Hàng Mới</h4></div>
              
              <form action="/suanhahang?id=<%=restau.id%>" method="POST">
                <div class="card-body">
                 <div class="form-group">
                  <label for="mon">Tiêu đề:</label>
                  <input type="text"  name="name" value="<%=restau.name%>" class="form-control" id="mon"  Required/>  
                  <label for="img">Ảnh nhà hàng:</label>
                  <input type="text" name="image" value="<%=restau.image%>" class="form-control" id="img"/>  
                  <label for="diachi">Địa chỉ:</label>
                  <input type="text" name="diachi" value="<%=restau.location%>" class="form-control" id="diachi"  Required/>  
                  <label for="mota">Mô tả ngắn:</label>
                  <textarea type="text" rows="3" name="mota" value=""  class="form-control" id="step" placeholder="Nội dung"  Required><%=restau.mota%></textarea>  
                  

                  
                  
                  <label for="nguyenlieu">Số món trong thực đơn:</label>
                  <input  type="number" class='form-control' name="somon" value="<%=menu.length%>"  style="border-radius: 5px; margin-bottom: 10px; width: 48%;" placeholder="Số nguyên liệu" onblur="checknumber(this);songuyenlieu(this.value);" value="1" min="1" max="20" >
                  
                  <%for(var i=0;i< menu.length;i++){%>
                  <div class="row" style="margin-top:15px;">
                    <div class="col-sm-6">
                      <input type="text" class="form-control" name="name<%=i+1%>" placeholder="Tên món" value="<%=menu[i].name%>" id="level"/> 
                    </div>
                    <div class="col-sm-6">
                      <input type="number" value="<%=menu[i].price%>"  placeholder="Giá tiền" name="gia<%=i+1%>" class="form-control" id="level"/>
                    </div>
                  </div><%}%>
                  <div id="nlieu"></div>
                  
                  <input  type="submit" class="btn btn-success btn-block" style="border-radius: 8px;margin-top: 25px;" value="Xác nhận"><br>
                </div>  
              </div>
            </form>
          </div><br>
          <div>
            <a href="#backtotop"><i class="fas fa-angle-double-up" style="font-size: 35px;color: #555;margin-left: 90%; "></i></a>
          </div>
          <hr id = "phienhoidap" class="featurette-divider">
        </div>
      </div>
