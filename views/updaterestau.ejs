        <h3 style="padding-bottom: 0px;text-decoration: none;">Ăn ngon cùng Cooky</h3>

        <p style="font-size: 14px"> @2019 design by Team 5</p>
      </ul>
    </footer>
  </body>
  <script type="text/javascript">
    function checknumber(inp){
      if(inp.value=="")
        inp.value=1;
      if(inp.value>20)
      {
        alert("Tối đa 20 thôi bạn!!");
        inp.value=20;
      }
    }
    function songuyenlieu(sonl){
      var i;
      var num=sonl;
      var code="";
      var nl1='<div class="row" style="margin-top:15px;"><div class="col-sm-6"><input type="text" class="form-control" name="name';
      var nl2='" placeholder="Tên món" id="level" Required/> </div><div class="col-sm-6"><input type="number"  placeholder="Giá tiền" name="gia'
      var nl3='" class="form-control" id="level"  Required/></div></div>';
      for(i=<%=menu.length%>;i<num;i++){
        code+= nl1+(i+1)+nl2+(i+1)+nl3;
      }
      document.getElementById("nlieu").innerHTML=code;
    }
    

  </script>
  </html>